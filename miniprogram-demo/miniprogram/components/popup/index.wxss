root-portal {
  display: flex;
  width: 100%;
  height: 100%;
}

.popup {
  position: absolute;
  bottom: 0;
  z-index: 5000;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100vw;
  height: 200px;
  background: rgba(51, 51, 51, 0.65);
  opacity: 1;
  transform: scale3d(1, 1, 1);
  transition: all .2s ease-in;
  pointer-events: auto;
}
