@import '../../../common/lib/weui.wxss';

.weui-tabs {
  width: 100%;
  height: 100%;
}

.weui-tabs-bar__wrp {
  width: 100%;
  background: var(--weui-BG-2);
  margin-top: 0;
  padding-top: 10px;
}

.weui-tabs-bar__content {
  width: 100%;
  white-space: nowrap
}

.weui-tabs-bar__item {
  display: inline-block;
}

.weui-tabs-bar__title {
  display: inline-block;
  border-bottom-width: 2px;
  border-bottom-style: solid;
  border-bottom-color: transparent;
}

