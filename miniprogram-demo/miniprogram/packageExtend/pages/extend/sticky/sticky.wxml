      <mp-sticky container="{{container}}" offset-top="64">
        <button size="mini" type="primary" style="margin-left: 215px; background-color: #ff976a;margin-top: 0; margin-bottom: 0">指定容器</button>
      </mp-sticky>
    </view>
  </view>
</view>

