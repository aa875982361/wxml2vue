    <mp-sticky bindscroll="onScroll">
      <button size="mini" type="primary" style="margin-left: 15px; margin-top: 0;margin-bottom: 0">基础用法</button>
    </mp-sticky>
  </view>
</view>

<view class="demo-block">
  <view class="demo-title">吸顶距离</view>
