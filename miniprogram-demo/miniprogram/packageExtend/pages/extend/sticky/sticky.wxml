      <button size="mini" type="primary" style="margin-left: 115px; background-color: #1989fa;margin-top: 0; margin-bottom: 0">吸顶距离</button>
    </mp-sticky>
  </view>
</view>

<view class="demo-block">
  <view class="demo-title">指定容器</view>
