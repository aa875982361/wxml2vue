<xr-demo-viewer
  title="glTF 添加模型内UV动画"
  intro="加载 glTF 模型，给模型内部材质添加UV动画"
>
  <xr-template-gltfUVAnimation
    disable-scroll
    id="main-frame"
    width="{{renderWidth}}"
    height="{{renderHeight}}"
    style="width:{{width}}px;height:{{height}}px;top:{{top}}px;left:{{left}}px;display:block;"
  />
</xr-demo-viewer>
